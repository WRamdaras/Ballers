{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-3xl">
            <div class="mb-3">
                <a href="{{ path('players') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Go
                    Back</a>
            </div>
            <h2 class="text-2xl font-bold mb-6 text-center">Add Player</h2>

            {% form_theme form 'form/tailwind_2_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_row(form.name) }}
                    {{ form_row(form.age) }}
                    {{ form_row(form.nationality) }}
                    {{ form_row(form.team) }}
                    <div class="mb-4">
                        {{ form_row(form.clubs) }}
                    </div>
                    <p class="text-gray-500 dark:text-gray-400">
                        Please press <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">Ctrl</kbd> and click to add more clubs.
                    </p>
                </div>
                <div class="w-full md:w-1/2 px-3">
                    {{ form_row(form.trophy) }}
                    {{ form_row(form.position) }}
                    {{ form_row(form.goals) }}
                    {{ form_row(form.assists) }}
                    {{ form_row(form.imgFile) }}
                </div>
            </div>
            <div class="flex items-center justify-center">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


