{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mx-auto px-4 py-8 mt-16">

        {% for label, messages in app.flashes %}
            {% for msg in messages %}
                <div id="alert-1"
                     class="flex items-center p-4 mb-4 text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400"
                     role="alert">
                    <div class="ms-3 text-sm font-medium">
                        {{ msg }}
                    </div>
                    <button type="button"
                            class="ms-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-blue-400 dark:hover:bg-gray-700"
                            onclick="this.closest('div').style.display='none'">
                        <span class="sr-only">Close</span>
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                    </button>

                </div>
            {% endfor %}
        {% endfor %}

        <div class="mb-3 mt-4">
            <a href="{{ path('players') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Go
                Back</a>
        </div>
        <div class="text-center w-100 pb-8 pt-5 flex items-center flex-col">
            <h2 class="text-5xl font-bold">{{ player.name }}</h2>
            <hr class="mt-3 w-1/2">
        </div>

        {% if not app.user %}

        {% else %}
            {% if "ROLE_EMPLOYEE" in app.user.roles %}
                <div class="mb-3">
                    <a href="{{ path('player-edit', { 'id': player.id }) }}"
                       class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Edit Player</a>
                </div>
            {% elseif "ROLE_ADMIN" in app.user.roles %}
                <div class="flex mb-3">
                    <div class="mr-3">
                        <a href="{{ path('player-edit', { 'id': player.id }) }}"
                           class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Edit Player</a>
                    </div>
                    <div>
                        <a href="{{ path('player-delete', { 'id': player.id }) }}"
                           class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700">Delete Player</a>
                    </div>
                </div>

            {% endif %}

        {% endif %}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="sm:col-span-2 lg:col-span-1">
                <div class="{{ player.team}} shadow-md rounded-lg overflow-hidden shadow">
                    <div class="fut-card-l1 bg-contain bg-no-repeat bg-center">
                        <div class="flex justify-center fut-card-l2 bg-contain bg-no-repeat bg-center">
                            <img class="w-4/5 object-cover" src="{{ asset('img/' ~ player.img) }}"
                                 alt="{{ player.name }}">
                        </div>
                    </div>
                    <div class="p-4">
                        <h2 class="text-xl font-bold mb-2 dark:text-white">{{ player.name }}</h2>
                        <p class="text-gray-700 dark:text-white"><strong>Age:</strong> {{ player.age }}</p>
                        <div>
                            <a href="{{ path('national-team') }}" class="text-gray-700 dark:text-white "><strong>Nationality: </strong><span
                                        class="underline decoration-sky-500">{{ player.nationality }}</span></a>
                        </div>
                        <div>
                            <a href="{{ path('club-team') }}"
                               class="text-gray-700 dark:text-white "><strong>Team: </strong><span
                                        class="underline decoration-sky-500">{{ player.team }}</span></a>
                        </div>
                        <p class="text-gray-700 dark:text-white"><strong>Trophies:</strong> {{ player.trophy }}</p>
                        <p class="text-gray-700 dark:text-white"><strong>Position:</strong> {{ player.position }}</p>
                        <p class="text-gray-700 dark:text-white"><strong>Goals:</strong> {{ player.goals }}</p>
                        <p class="text-gray-700 dark:text-white"><strong>Assists:</strong> {{ player.assists }}</p>
                    </div>
                </div>
            </div>

            <div class="col-span-2">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    {% for key,playerTrophies in trophyyear %}
                        <div class="max-w-sm py-3 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                            <div class="flex m-2 h-1/2 content-center justify-center">
                                <img class="rounded-t-lg" src="{{ asset('img/' ~ playerTrophies[0].trophy.img) }}"
                                     alt="{{ playerTrophies[0].trophy.img }}"/>
                            </div>
                            <div class="py-2 px-4">
                                <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ playerTrophies[0].trophy.name }}</h5>
                                {% for playerTrophy in playerTrophies %}
                                    <p class="font-normal text-gray-700 float-left dark:text-gray-400 m-1">{{ playerTrophy.year }}
                                        -</p>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>

        <div class="mt-8">
            <h3 class="text-2xl font-bold mb-4">Clubs played for</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4">
                {% for club in player.clubs %}
                    <div class="{{ club.name}}  max-w-sm py-3 rounded-lg shadow ">
                        <div class="flex justify-center">
                            <img class="w-3/5 h-1/2 object-cover rounded-t-lg" src="{{ asset('img/' ~ club.img) }}"
                                 alt="{{ club.name }}">
                        </div>
                        <div class="p-4">
                            <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ club.name }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

